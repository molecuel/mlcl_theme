<div class="digests featured cf">
  <div class="row">
    {{#if items}}
      {{#each items}}
        <div class="col-md-3">
          <article class="digest teaser">
            <a href="{{download.url}}" target="_blank">
              {{#if thumbnail.url}}
                <img src="{{thumbnail.url}}" />
              {{else}}
                <img src="{{theme:statics}}/img/default/digest.png" />
              {{/if}}
              <h3>{{title}}</h3>
            </a>
          </article>
        </div>
      {{/each}}
    {{else}}
      <div class="col-md-12">
        <h3>{{i18n:t "no digests available"}}</h3>
      </div>
    {{/if}}
    <div class="col-md-12">
      <div class="form-wrap">
        <a type="button" class="btn btn-lg" href="">{{i18n:t "Subscribe LT Digest"}}</a>
      </div>
    </div>
  </div>
</div>
