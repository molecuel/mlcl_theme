<div class="form cf row">
  <div class="col-md-12">
    <select class="selectpicker form-item" data-style="btn-sm" id="application">
      <option value="">{{i18n:t "Application"}}</option>
      {{#each applications}}
        <option value="{{key}}">{{title}}</option>
      {{/each}}
    </select>

    <select class="selectpicker form-item" data-style="btn-sm" id="city">
      <option value="">{{i18n:t "City"}}</option>
      {{#each cities}}
        <option value="{{key}}">{{key}}</option>
      {{/each}}
    </select>

    <select class="selectpicker form-item" data-style="btn-sm" id="luminaire">
      <option value="">{{i18n:t "Used Luminaire"}}</option>
      {{#each luminaires}}
        <option value="{{key}}">{{title}}</option>
      {{/each}}
    </select>
  </div>
</div>

{{#foreach projectmarker}}
<div class="projects marker" style="display: none;">
  <div class="project teaser " data-lat="{{location.geo.lat}}" data-lng="{{location.geo.lon}}">
    {{#if images.[0]}}
    <a href="{{url:item}}" class="image">
      <figure>
        <img src="/image/projectthumbs{{images.[0].url}}" />
      </figure>
    </a>
    <div class="text w-image">
      <h2><a href="{{url:item}}">{{title}}</a></h2>
      <p class="city">{{location.city}}</p>
    </div>
    <div class="more">
      <a href="{{url:item}}" class="more">{{i18n:t "see more"}} <i class="readmore black"></i></a>
    </div>

    {{else}}
      <h2>{{title}}</h2>
      <p class="city">{{location.city}}</p>
    {{/if}}
  </div>
</div>
{{/foreach}}

{{#if projects}}
{{#if showProjects}}
<div class="projects collection cf row">
  {{#foreach projects columns="4"}}
    <div class="item col-md-3">
      <article class="project teaser _id-{{_id}}" data-lat="{{location.geo.lat}}" data-lng="{{location.geo.lon}}">
        <a href="{{url:item}}" class="image">
          <figure>
          {{#if images.[0]}}
          <img src="/image/projectthumbs{{images.[0].url}}" />
          {{/if}}
          </figure>
        </a>

        <h2><a href="{{url:item}}">{{title}}</a></h2>
        <p class="city">{{location.city}}</p>
      </article>
    </div>
  {{/foreach}}
</div>
{{/if}}
{{/if}}

{{#if showApplications}}
<div class="applications collection">
  <div class="row">
    {{#foreach applications columns="4"}}
      <div class="item small-family col-md-3">
        <a href="?application={{key}}" class="product-image">
          <figure>
            {{#if photo.url}}
              <img src="{{theme:statics}}/img/loader.gif" data-src="{{photo.url}}" />
            {{else}}
              <img src="/public/applications/{{key}}.jpg" />
            {{/if}}
          </figure>
          <h3>{{title}}</h3>
        </a>

        {{#if extendedtitle.text}}
          <p class="prose">{{extendedtitle.text}}</p>
        {{else}}
          <p class="red">{{i18n:t "no extendedtitle.text found yet"}}</p>
        {{/if}}
      </div>
    {{/foreach}}
  </div>
</div>
{{/if}}
