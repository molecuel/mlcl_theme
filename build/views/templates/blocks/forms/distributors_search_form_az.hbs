<div class="form filter cf">
  <div class="row">
    <div class="col-md-3">
      <div class="input-group locate form-item input-group-sm input-group-select2">
        <select class="select2 form-control input-sm" id="country">
          <option value="">{{i18n:t "Country"}}</option>
          {{#each countries}}
            <option>{{this}}</option>
          {{/each}}
        </select>
        <span class="input-group-btn">
          <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-search" id="buttonSearch"></span></button>
        </span>
      </div>
    </div>

    <div class="col-md-3">
      <div class="input-group form-item input-group-sm">
        <input type="text" class="form-control" placeholder="{{i18n:t "Country / City / Zip Code"}}" id="search">
        <span class="input-group-btn">
          <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-search" id="buttonSearch"></span></button>
        </span>
      </div>
    </div>

    <div class="col-md-6 terms">
      <div class="pull-left">
        <a class="more" href="{{lang:link "/company/terms-conditions"}}">{{i18n:t "Terms & Conditions"}} <i class="readmore"></i></a>&nbsp;&nbsp;
      </div>

      <div class="pull-left">
        <a class="more" href="{{lang:link "/company/distribution"}}">{{i18n:t "Distribution Policy"}} <i class="readmore"></i></a>
      </div>
    </div>
  </div>
</div>
