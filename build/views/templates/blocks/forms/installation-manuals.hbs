<div class="form cf row">
  <div class="col-md-3">
    <div class="pull-left">
      <select class="selectpicker form-item" data-style="btn-sm" id="application">
        <option value="">{{i18n:t "Product"}}</option>
        {{#each applications}}
          <option value="{{key}}">{{title}}</option>
        {{/each}}
      </select>
    </div>
  </div>
  <div class="col-md-3">
    <div class="pull-left">
      <div class="input-group locate form-item">
        <input type="text" class="form-control" placeholder="{{i18n:t "Search in FAQ"}}" id="search">
        <div class="input-group-addon"><span class="glyphicon glyphicon-search" id="buttonSearch"></span></div>
      </div>
    </div>
  </div>


  <h1>{{i18n:t "FORMS"}}</h1>

  <div class="row">
    <div class="col-lg-6">
      <div class="input-group">
        <span class="input-group-btn">
          <button class="btn btn-default" type="button">{{i18n:t "Go!"}}</button>
        </span>
        <input type="text" class="form-control">
      </div><!-- /input-group -->
    </div><!-- /.col-lg-6 -->
    <div class="col-lg-6">
      <div class="input-group">
        <input type="text" class="form-control">
        <span class="input-group-btn">
          <button class="btn btn-default" type="button">{{i18n:t "Go!"}}</button>
        </span>
      </div><!-- /input-group -->
    </div><!-- /.col-lg-6 -->
  </div><!-- /.row -->

  <div class="row">
    <div class="col-lg-6">
      <select class="selectpicker form-item" data-style="btn-sm" id="country">
        <option value="">{{i18n:t "Country"}}</option>
        {{#each countries}}
          <option>{{this}}</option>
        {{/each}}
      </select>
    </div>
</div>
