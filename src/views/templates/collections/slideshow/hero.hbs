<div class="hero royalSlider rsDefault">


  {{#each items}}
    <div class="rsContent">
      <img src="{{teaser.hero}}" />
      <div class="wrap rsABlock" data-move-effect="bottom" data-fade-effect="true">
        <div class="stage {{class}}">
          <div class="info-box">
            <header>
              <h1>{{teaser.title}}</h1>
              <h4>{{teaser.description}}</h4>
            </header>
            <a href="{{url}}">{{link}} <i class="readmore big"></i></a>
          </div>
        </div>
      </div>
    </div>
  {{/each}}

</div>
