<div class="featured-news cf">
  <div class="row">
    {{#if items}}
      {{#each items}}
        <div class="col-md-4">
          <article class="news teaser">
            <a href="{{url:item}}">
              {{#if images.[0].file}}
              <img src="{{images.[0].file.url}}" />
              {{else}}
              <img src="{{theme:statics}}/img/default/news.png" />
              {{/if}}
              <h3>{{title}}</h3>
              <p class="date">{{moment:date publishdate "MMM, Do YYYY"}}</p>
              <p>{{{shortdescription}}}</p>
            </a>
          </article>
        </div>
      {{/each}}
    {{else}}
      <div class="col-md-4">
        <h3>{{i18n:t "no items available"}}</h3>
      </div>
    {{/if}}
  </div>
</div>
